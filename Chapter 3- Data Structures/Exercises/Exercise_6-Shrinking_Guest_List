#Exercise 6: Shrinking Guest List

guests = ['C.S. Lewis', 'J.R.R. Tolkien', 'Joseph Stalin']


for i in range(0, 3):
    name = guests[i].title()
    print(name + ", you are invited to dinner.")

name = guests[2].title()
print("\nIt looks like " + name + " can't make it to dinner.")

del(guests[2])
guests.insert(1, 'Jeruel Aguhob')

name = guests[0].title()
print("\n" + name + ", you are invited to dinner.")

for i in range(1,3):
    name = guests[i].title()
    print(name + ", you are invited to dinner.")

print("\nWe have received a bigger table for more guests.")
guests.insert(0, 'Van Gogh')
guests.insert(2, 'Ryan Gosling')
guests.append('Lance Bautista')

for i in range(0,6):
    name = guests[i].title()
    print(name + ", you are invited to dinner.")

print("\nWe are sorry to inform you that we can only invite two people to dinner.")

name = guests.pop()
print("Sorry, " + name.title() + ", there's no more room at the table.")

name = guests.pop()
print("Sorry, " + name.title() + ", there's no more room at the table.")

name = guests.pop()
print("Sorry, " + name.title() + ", there's no more room at the table.")

name = guests.pop()
print("Sorry, " + name.title() + ", there's no more room at the table.")

for i in range(0,2):
    name = guests[i].title()
    print(name + ", you are invited to dinner.")

del(guests[0])
del(guests[0])

print(guests)